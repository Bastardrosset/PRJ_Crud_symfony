{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td,
    th {
        border: 1px solid rgb(190, 190, 190);
        padding: 10px;
    }

    td {
        text-align: center;
    }

    tr:nth-child(even) {
        background-color: #eee;
    }

    th[scope='col'] {
        background-color: #696969;
        color: #fff;
    }

    th[scope='row'] {
        background-color: #d7d9f2;
    }

    caption {
        padding: 10px;
        caption-side: bottom;
    }

    table {
        border-collapse: collapse;
        border: 2px solid rgb(200, 200, 200);
        letter-spacing: 1px;
        font-family: sans-serif;
        font-size: 0.8rem;
    }
</style>

<div class="example-wrapper">
    <a href="{{ path('home') }}">Home</a>
    <br>
    <a href="{{ path('user_create') }}">Creation d'user</a>
    <h1>Liste des utilisateurs</h1> 
    <table>
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Mot de passe</th>
            <th>Actions</th>
        </tr>
        {% for user in users %}
        <tr>
        
            <td>{{user.email}}</td>
            <td>{{user.firstname}}</td>
            <td>{{user.lastname}}</td>
            <td>{% if user.password %} <!--âœ…--> &#9989 {% else %} &#10060; {% endif %}</td>
            <td>
                <a href="{{ path('user_profile', {id:user.id}) }}"> Consulter Profil </a>
                /
                <a href="{{ path('user_update', {id:user.id}) }}"> Modifier user</a>
                /
                <a href="{{ path('user_delete', {id:user.id}) }}"> Supprimer Profil </a>
            </td>
        
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
