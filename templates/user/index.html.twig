{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .div{
        padding: 0.5rem;
        border: 10px ;
    }
</style>
<div class="example-wrapper">
    <div> <h1>Utilisateur à l'id : {{user.id}}</h1></div>
    <div class="div"><span >Prénom de l'utilisateur : </span><span>{{user.firstname}}</span></div> 
    <div class="div"><span >Nom de famille de l'utilisateur : </span><span>{{user.lastname}}</span></div> 
    <div class="div"><span >Courriel de l'utilisateur : </span><span>{{user.email}}</span></div> 
    <div class="div"><span >Mot de passe hashé : </span><span>{{user.password}}</span></div> 
</div>
{% endblock %}
